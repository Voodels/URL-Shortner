# ============================================================================
# Kubernetes Secret - Sensitive Data
# ============================================================================
# IMPORTANT: Do not commit this file with real secrets!
# Use sealed-secrets, external-secrets, or vault in production
# ============================================================================

apiVersion: v1
kind: Secret
metadata:
  name: urlshortener-secrets
  labels:
    app: urlshortener
type: Opaque
stringData:
  # Database credentials
  db_user: urluser
  db_password: changeme-secure-password
  mysql_root_password: changeme-root-password

  # JWT secrets
  jwt_secret: changeme-jwt-secret-key
  session_secret: changeme-session-secret-key

---
# ============================================================================
# Generate real secrets with:
# kubectl create secret generic urlshortener-secrets \
#   --from-literal=db_user=urluser \
#   --from-literal=db_password=$(openssl rand -base64 32) \
#   --from-literal=mysql_root_password=$(openssl rand -base64 32) \
#   --from-literal=jwt_secret=$(openssl rand -base64 32) \
#   --from-literal=session_secret=$(openssl rand -base64 32)
# ============================================================================
